# 구글 서비스 계정 인증 설정 (둘 중 하나 사용)
# 1) 서비스 계정 키 JSON 파일 경로
GOOGLE_APPLICATION_CREDENTIALS=service_account.json
# 2) 또는 서비스 계정 키 JSON 내용을 그대로 붙여넣기 (한 줄 JSON 문자열)
SERVICE_ACCOUNT_JSON=

# 대상 스프레드시트 ID
SPREADSHEET_ID=

# 기본 컬럼명 (시트마다 구조가 달라도 이 컬럼들은 존재)
AGENCY_COLUMN=대행사 명
INTERNAL_COLUMN=내부 진행건
REMAINING_DAYS_COLUMN=마감 잔여일
CHECKED_COLUMN=마감 안내 체크
BIZNAME_COLUMN=상호명

# Flask 서버 설정
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
FLASK_DEBUG=false
